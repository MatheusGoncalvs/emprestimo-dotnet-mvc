@model EmprestimoModelView
<section class="content">
    <div class="container-fluid">
        <form method="post">
            <div class="row justify-content-center">
                <div class="col-sm-5 block">
                    <div class="row titulo-bloco">
                        <h1>Empréstimo cadastrado com sucesso!</h1>
                    </div>
                    <div class="middle--block">
                        <div class="row input-padding-resumo">
                            <h2>Resumo - - - - - - - - - - - - - - - - - - - - - - - - -</h2>
                        </div>
                        <div class="row input-padding-resumo">
                            <h3><strong>Cliente: </strong>@Model.Nome</h3>
                        </div>
                        <div class="row input-padding-resumo">
                            <h3><strong>Valor do empréstimo: </strong>@Model.Valor</h3>
                        </div>
                        <div class="row input-padding-resumo">
                            <h3><strong>Prazo para pagamento: </strong>2x de R$ 500,00</h3>
                        </div>
                        <div class="row input-padding-resumo">
                            <h3><strong>Data da primeira parcela: </strong>@Model.Entrada</h3>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
