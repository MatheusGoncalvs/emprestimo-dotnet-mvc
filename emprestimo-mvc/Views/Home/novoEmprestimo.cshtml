@model Pessoa
<link href="~/css/main.css" rel="stylesheet" />
<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-5 block">
                <div class="row titulo-bloco">
                    <h1>Qual o nome do <strong>cliente</strong>?</h1>
                </div>
                <!--<form asp-controller="Home" asp-action="ValorNovoEmprestimo"> -->
                <div class="middle--block">
                    <div class="form-group content-block">
                        <label for="nomeNovoEmprestimo">Nome</label>
                        <input id="nomeNovoEmprestimo" name="nomeNovoEmprestimo" type="text" class="form-control">
                    </div>
                    <input id="btn-novoEmprestimo" type="submit" class="btn btn-success" value="CONTINUAR">
                </div>
                <!-- </form> -->
                <div class="row bottom-bloco">
                    <a href="#" id="link-novo-cliente" data-toggle="modal" data-target="#modalNovoCliente">
                        <h3>
                            <i class="far fa-address-card"></i>
                            Cadastrar novo cliente
                        </h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!--Modal-->
<!-- Modal cadastrar novo cliente-->
<div class="modal fade" id="modalNovoCliente" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Cadastre um novo cliente</h1>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!--Conteúdo-->
                <form action="cadastrarNovoCliente" method="post">
                    <div class="row justify-content-center">
                        <div class="col-sm-10">
                            <div class="middle--block">
                                <div class="form-group">
                                    <label asp-for="Nome">Nome</label>
                                    <input asp-for="Nome" id="nomeNovoCliente" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" id="emailNovoCliente" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Telefone">Telefone</label>
                                    <input asp-for="Telefone" id="telefoneNovoCliente" type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Rua">Rua</label>
                                    <input asp-for="Rua" id="ruaNovoCliente" type="text" class="form-control">
                                </div>
                                <div class="row">
                                    <div class="col-4">
                                        <div class="form-group">
                                            <label asp-for="Numero">N° casa</label>
                                            <input asp-for="Numero" type="number" size="8" class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="form-group">
                                            <label asp-for="Bairro">Bairro</label>
                                            <input asp-for="Bairro" type="text" size="20" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cidade">Cidade</label>
                                    <input asp-for="Cidade" type="text" size="30" class="form-control">
                                </div>
                                <input type="submit" class="btn btn-success" value="Cadastrar">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
